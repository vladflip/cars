hr
	border-top 1px solid #BBB
	border-right 0
	border-bottom 0
	border-left 0
	margin 0
	
body
	margin 0
	font-family $font
	font-weight 300
	background-color #FEFEFE
	
a
	color inherit
	text-decoration none
	height 100%
	width 100%
	display inline-block
	
	
ul, ol
	margin 0
	padding 0
	list-style none
	
h1, h2, h3
	color #2D2D2D

h3
	font-size 18px
	word-spacing 2px
	
h1
	font-size 28px
	
h2 
	font-size 22px
	
h3 
	font-size 18px 
	
.clear-fix
	cf()
	
.left
	float left
	
.right
	float right
	
.alert-message
	font-size 14px
	color #777
	line-height 20px