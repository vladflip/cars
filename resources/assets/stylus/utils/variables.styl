$font = Roboto, sans-serif

$orange = #fdf6d1

$yellow = #f3df6d

$grey = #f0f0f0

$color = #2d2d2d

$blue = #4e61eb

$black = #121212

$linkred = #FF4444

center-text()
	display flex
	flex-direction column
	text-align center
	justify-content center
	
button(color)
	center-text()
	font-size 12px
	width 170px
	height 40px
	cursor pointer
	border 4px solid color
	user-select none
	transition .2s ease
	box-shadow 0 10px 10px -10px rgba(0, 0, 55, 0.3)
	
button--hover(color)
	background-color rgba(color, .9)
	
button__reg(color)
	box-shadow inset 2px 2px 3px color
	text-shadow 1px 3px 4px color
	background-color rgba(color, 0.3)
	transition .2s ease

button__reg--hover(color)
	box-shadow inset 2px 2px 3px rgba(color, .0)
	text-shadow 1px 3px 4px rgba(color, .0)
	background-color rgba(white, .1)
	
button__add--orange()
		margin 10px 0
		border-radius 2px
		border none
		font-size 14px
		letter-spacing .03em
		color #212121
		text-shadow 0px 1px 4px rgb(255, 245, 203)
		background-image -webkit-linear-gradient(top, rgb(255, 229, 138) 0%,
			rgb(243, 223, 109) 50%, #f3df6d 51%, #FCE27F 100%)
		background linear-gradient(top, rgb(255, 229, 138) 0%,
			rgb(243, 223, 109) 50%, #f3df6d 51%, #FCE27F 100%)
		box-shadow 0 10px 10px -10px rgba(0,0,55, 0.3), 0 1px 0 0 rgb(189, 157, 81)
		
			
placeholder()
	&::-webkit-input-placeholder 
		{block}
	&::-moz-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}
		
block-border()
	border 1px solid #BBBBBB
	border-radius 2px
	box-shadow 0 10px 10px -10px rgba(0,0,55, 0.3)
		
	
$header
	margin 25px 0 0 35px