.feedback
	background-color white
	padding 20px 40px
	display flex
	flex-direction column
	align-items center
	block-border()
	transition .2s ease-in
	
	&:hover
		border 1px solid #F4E177
	
	&_h3
		font-size 16px
		margin 10px 0
		text-align center
		
	&_p
		margin 0
		text-align center
		line-height 25px
		font-size 12px
		
	&_button
		margin 10px 0
		button($yellow)
		
		
		&:hover
			button--hover($yellow)
			color #FFF
			
		
	&_photos
		cf()
		
	&_toolbar
		color #444
		border-bottom 1px solid #e4e4e4
		
	&_editor
		color #222
	
	&_editor-wrapper
		border 1px solid #e4e4e4
		
	&_add-photos
		margin-top 20px
		
	&_add-photo
		height 70px
		width 100px
		border 1px solid #e4e4e4
		cursor pointer
		background url(../img/plus.png) no-repeat center
		float left
		
	&_input-file
		display none
		
	&_photo-img
		border 1px solid #e4e4e4	
		height 70px
		width 100px
		text-align center
		img
			max-height 70px
			max-width 100px
		
	&_photo
		height 85px
		width 100px
		float left
		margin-right 13px
		margin-bottom 5px
		
		&:nth-child(7n+7)
			margin-right 0
		
	&_conclusions
		display flex
		justify-content space-between
		
	&_minuses
		width 307px
		
	&_plus,
	&_minus
		position relative
		margin-top 10px
		
		input
			padding-right 20px

	&_plus &_redx,
	&_minus &_redx
		position absolute
		right 10px
		top 40%